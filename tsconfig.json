{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false, 
    "outDir": "out",           
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "src/tests",
    "angular-src/e2e",
    "angular-src/**/*.spec.ts"
  ],
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true
}